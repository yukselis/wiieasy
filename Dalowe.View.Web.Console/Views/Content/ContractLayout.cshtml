@using Arwend;
@using Arwend.Web.View.Mvc.Html;
@using Dalowe.View.Web.Framework.Helpers;
@model Dalowe.View.Web.Framework.Models.Content.ContractModel

@{
    string cdnUrl = ConfigurationManager.CdnUrl;
    string version = ConfigurationManager.ApplicationVersion;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="@ConfigurationManager.Language" lang="@ConfigurationManager.Language">

<head>
    <title>@(ViewBag.Title ?? "Genel Bakış") | Ege Medya Yönetim Paneli</title>
    <meta http-equiv="content-type" content="text/html; charset=windows-1254" />
    <meta http-equiv="content-type" content="text/html; charset=ISO-8859-9" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta content="text/html; charset=x-mac-turkish" http-equiv="content-type" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, minimum-scale=0.25, maximum-scale=1.0, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)vendors/bootstrap/css/bootstrap.min.css?@version" />
    <style>
        @@media print {
            body {
                -webkit-print-color-adjust: exact !important;
            }

            .print-only {
                display: block;
            }

            .hide-print {
                display: none;
            }
        }

        .print-only {
            display: none;
        }

        .hide-print {
            display: block;
        }

        .full-width {
            float: left;
            width: 100%;
        }

        .border-left {
            border-left: 1px inset #292929;
            box-sizing: border-box;
        }

        .border-right {
            border-right: 1px inset #292929;
            box-sizing: border-box;
        }

        .border-top {
            border-top: 1px inset #292929;
            box-sizing: border-box;
        }

        .border-bottom {
            border-bottom: 1px inset #292929;
            box-sizing: border-box;
        }

        .logo-container img {
            width: 200px;
            margin-top: 50px;
            margin-left: 20px;
        }

        span {
            float: left;
            width: 100%;
            font-weight: bold;
            text-align: left;
            font-size: 12px;
            font-family: calibri;
            color: #292929;
            line-height: 15px;
        }

        p {
            float: left;
            width: 100%;
            font-weight: bold;
            text-align: left;
            font-size: 12px;
            font-family: calibri;
            color: #292929;
            line-height: 15px;
            margin: 0;
        }

        li {
            float: left;
            width: 100%;
            font-weight: bold;
            text-align: left;
            font-size: 12px;
            font-family: calibri;
            color: #292929;
            line-height: 15px;
        }

        .page-container {
        }

            .page-container div {
                padding: 0;
            }

        .contract-title {
            margin-top: 50px;
        }


            .contract-title span {
                text-align: center;
                font-weight: bold;
                font-size: 16px;
            }

        .columns-container {
            margin-top: 20px;
        }

            .columns-container span {
                text-align: center;
                font-weight: bold;
                font-size: 14px;
            }

        .offeritem {
        }

            .offeritem span {
                text-align: center;
            }

        .price-container {
            margin-top: 40px;
            margin-bottom: 30px;
        }

            .price-container span {
                font-weight: bold;
            }

        .contract-text {
            margin-top: 3px;
        }

            .contract-text.double-margin {
                margin-top: 20px;
            }

        .payment-info-container {
            margin-top: 40px;
            margin-bottom: 40px;
        }

        .break-after {
            display: block;
            page-break-after: always;
            position: relative;
            float: none;
            min-height: 1px;
            width: 100%;
        }

        .break-before {
            display: block;
            page-break-before: always;
            position: relative;
            float: none;
            min-height: 1px;
            width: 100%;
        }

        .ordino-price-row {
            margin-top: 10px;
        }
    </style>
</head>
<body class="full-strech-background">
    <div class="col-lg-6 col-lg-offset-3 page-container">
        <div class="logo-container full-width">
            <img src="/Files/images/logo.png" />
        </div>
        <div class="contract-title col-xs-12">
