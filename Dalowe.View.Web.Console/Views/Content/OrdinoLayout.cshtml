@using Arwend;
@using Arwend.Web.View.Mvc.Html;
@using Dalowe.View.Web.Framework.Helpers;
@model Dalowe.View.Web.Framework.Models.Content.OrdinoModel

@{
    string cdnUrl = ConfigurationManager.CdnUrl;
    string version = ConfigurationManager.ApplicationVersion;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="@ConfigurationManager.Language" lang="@ConfigurationManager.Language">

<head>
    <title>@(ViewBag.Title ?? "Genel Bakış") | Ege Medya Yönetim Paneli</title>
    <meta http-equiv="content-type" content="text/html; charset=windows-1254" />
    <meta http-equiv="content-type" content="text/html; charset=ISO-8859-9" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta content="text/html; charset=x-mac-turkish" http-equiv="content-type" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, minimum-scale=0.25, maximum-scale=1.0, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)vendors/bootstrap/css/bootstrap.min.css?@version" />
    <style>
        @@media print {
            body {
                -webkit-print-color-adjust: exact !important;
            }

            .print-only {
                display: block;
            }

            .hide-print {
                display: none;
            }
        }

        .print-only {
            display: none;
        }

        .hide-print {
            display: block;
        }

        .full-width {
            float: left;
            width: 100%;
        }

        .border-left {
            border-left: 1px inset #292929;
            box-sizing: border-box;
        }

        .border-right {
            border-right: 1px inset #292929;
            box-sizing: border-box;
        }

        .border-top {
            border-top: 1px inset #292929;
            box-sizing: border-box;
        }

        .border-bottom {
            border-bottom: 1px inset #292929;
            box-sizing: border-box;
        }

        .logo-container img {
            width: 200px;
            margin-top: 50px;
            margin-left: 20px;
        }

        span {
            float: left;
            width: 100%;
            font-weight: bold;
            text-align: center;
            font-size: 12px;
            font-family: calibri;
            color: #292929;
            line-height: 30px;
        }

        .signature-container {
            height: 150px;
        }

        .address-container {
            height: 150px;
        }

            .address-container span {
                text-align: left;
            }

        .footer-container {
            background: url("/Files/images/footer.png") no-repeat;
            background-size: contain;
            height: 150px;
            background-position-y: 1px;
        }
    </style>
</head>
<body class="full-strech-background">
    <div class="col-lg-6 col-lg-offset-3">
        <div class="logo-container full-width">
            <img src="/Files/images/logo.png" />
        </div>
        <div class="date-container col-xs-12">
            <div class="col-xs-5 pull-right">
                <div class="date-info col-xs-12">
                    <span class="col-xs-6">Tarih:</span>
                    <span class="col-xs-6">@DateTime.Now.ToShortDateString()</span>
                </div>
                <div class="contract-info col-xs-12">
                    <span class="col-xs-6">Sözleşme No:</span>
                    <span class="col-xs-6">@Model.ContractId</span>
                </div>
            </div>
        </div>
        <div class="col-xs-12 title-container">
            <span>AÇIKHAVA MECRA ORDİNOSU</span>
        </div>
        <div class="col-xs-12 table-container">
            <div class="col-xs-12 border-bottom border-right border-left border-top">
                <div class="col-xs-4 border-right">
                    <span>FİRMA ADI</span>
                </div>
                <div class="col-xs-8">
                    @Model.Customer.Name
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>BAŞLANGIÇ - BİTİŞ TARİHİ</span>
                </div>
                <div class="col-xs-8">
                    @Model.TimeRange.StartTime.ToShortDateString() - @Model.TimeRange.EndTime.ToShortDateString() (@(Math.Ceiling((double)Model.TimeRange.EndTime.Subtract(Model.TimeRange.StartTime).Days / 7)) HAFTA)
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>MARKA</span>
                </div>
                <div class="col-xs-8">
                    @Model.Customer.Brand
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>BÖLGE</span>
                </div>
                <div class="col-xs-8">
                    @Model.OfferItem.Products.First().County
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>ÜRÜN KODU</span>
                </div>
                <div class="col-xs-8">
                    @Model.OfferItem.Products.Count ADET @Model.OfferItem.Products.First().Type.ToStringValue()
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>BİRİM TUTAR TL</span>
                </div>
                <div class="col-xs-8">
                    @Model.OfferItem.UnitPrice TL + KDV
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>TOPLAM TUTAR TL</span>
                </div>
                <div class="col-xs-8">
                    @(Model.OfferItem.TotalPrice) TL + KDV
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>AHP</span>
                </div>
                <div class="col-xs-8">
                    @Model.Customer.CommissionRate%
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>NET TUTAR TL</span>
                </div>
                <div class="col-xs-8">
                    @(Model.Customer.CommissionRate == 0 ? Model.OfferItem.TotalPrice : Model.OfferItem.TotalPrintPrice - (Model.OfferItem.TotalPrintPrice * Model.Customer.CommissionRate / 100)) TL + KDV
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>BASKI VE UYGULAMA BEDELİ</span>
                </div>
                <div class="col-xs-8">
                    @Model.OfferItem.TotalPrintPrice TL + KDV
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>VADE</span>
                </div>
                <div class="col-xs-8">
                    @Model.PaymentMethod
                </div>
            </div>
            <div class="col-xs-12 border-right border-left border-bottom">
                <div class="col-xs-4 border-right">
                    <span>AÇIKLAMA</span>
                </div>
                <div class="col-xs-8">
                    @Model.Description
                </div>
            </div>
            <div class="col-xs-12 address-container border-right border-bottom border-left">
                <span>@Model.Customer.Address</span>
                <span>KİRACI TEL/ FAX:@Model.Customer.ContactNumber</span>
                <span>KİRACI VD NO:@Model.Customer.TaxInfo</span>
            </div>
            <div class="col-xs-12 signature-container border-right border-bottom border-left">
                <div class="col-xs-4">
                    <span>FİRMA ADI</span>
                </div>
                <div class="col-xs-4 pull-right">
                    <span>REZERVASYON SORUMLUSU</span>
                    <span>ONAY</span>
                    <span></span> @*TODO:Owner eklenecek*@
                </div>
            </div>
            <div class="col-xs-12 footer-container border-right border-bottom border-left">

            </div>
        </div>
    </div>
    <script src="@(cdnUrl)js/jquery-1.11.0.min.js?@version"></script>
    <script>

    </script>
</body>
</html>
