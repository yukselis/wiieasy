@using Arwend
@{
    string cdnUrl = ConfigurationManager.CdnUrl;
    string version = ConfigurationManager.ApplicationVersion;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="@ConfigurationManager.Language" lang="@ConfigurationManager.Language">
<head>
    <title>@(ViewBag.Title ?? "Hata") | Ege Medya Yönetim Paneli</title>
    <base href="@ConfigurationManager.DomainUrl" />
    <meta content="@ConfigurationManager.Language" http-equiv="content-language" />
    <meta http-equiv="content-type" content="text/html; charset=windows-1254" />
    <meta http-equiv="content-type" content="text/html; charset=ISO-8859-9" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta content="text/html; charset=x-mac-turkish" http-equiv="content-type" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, minimum-scale=0.25, maximum-scale=1.0, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="icon" href="@(cdnUrl)images/favicon.ico" sizes="16x16" />
    <link rel="shortcut icon" href="@(cdnUrl)images/favicon.ico" type="image/x-icon" sizes="16x16" />
    <link rel="fluid-icon" href="@(cdnUrl)images/favicon.ico" title="Ege Medya INO" />
    <link rel="logo" type="image/svg" href="@(cdnUrl)images/logo.png" />
    <link type="text/css" rel="stylesheet" async href="https://fonts.googleapis.com/css?family=Oswald:400,300,700&subset=latin,latin-ext" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)vendors/font-awesome/css/font-awesome.min.css?@version" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)vendors/bootstrap/css/bootstrap.min.css?@version" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)vendors/animate/animate.min.css?@version" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)css/themes/gray.css?@version" id="color-style" />
</head>
<body id="error-page" class="animated bounceInLeft">
    <div id="error-page-content">
        @*<h1>404!</h1>
            <h4>Aradığınız sayfa bulunamadı! </h4>
            <p>Aradığınız sayfa kaldırılmış veya kullanılamıyor olabilir.</p>*@
        <h1>Hata!</h1>
        <p>Şu anda isteğinizi yerine getiremiyoruz!<br />Lütfen tekrar deneyiniz...</p>
        <div>
            <a href="javascript:history.back(-1);" class="btn btn-default" title="Geldiğim sayfaya geri dön"><i class="fa fa-chevron-circle-left"></i>&nbsp;Geri</a>
            <a href="/" class="btn btn-primary" title="Anasayfaya git">Anasayfa&nbsp;<i class="fa fa-chevron-circle-right"></i></a>
        </div>
    </div>
</body>
</html>
