    <script src="@(cdnUrl)vendors/sweet-alert/sweetalert.min.js?@version"></script>
    <script src="@(cdnUrl)js/arwend/arwend-tr-1.0.1.js?@version"></script>
    <script src="@(cdnUrl)js/digiturk-support-console.js?@version"></script>
    @RenderSection("scripts", required: false)
