    <link rel="apple-touch-icon" sizes="72x72" href="@(cdnUrl)images/apple-touch/apple-touch-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="@(cdnUrl)images/apple-touch/apple-touch-icon-76x76.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="@(cdnUrl)images/apple-touch/apple-touch-icon-114x114.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="@(cdnUrl)images/apple-touch/apple-touch-icon-120x120.png" />
    <link rel="apple-touch-icon" sizes="144x144" href="@(cdnUrl)images/apple-touch/apple-touch-icon-144x144.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="@(cdnUrl)images/apple-touch/apple-touch-icon-152x152.png" />
    <link type="text/css" rel="stylesheet" async href="https://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,800italic,400,700,800" />
    <link type="text/css" rel="stylesheet" async href="https://fonts.googleapis.com/css?family=Oswald:400,300,700&subset=latin,latin-ext" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)vendors/font-awesome/css/font-awesome.min.css?@version" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)vendors/bootstrap/css/bootstrap.min.css?@version" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)vendors/animate/animate.min.css?@version" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)css/themes/gray.css?@version" id="color-style" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)css/style-responsive.css?@version" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)css/digiturk-support-console.css?@version" />
    <link type="text/css" rel="stylesheet" href="@(cdnUrl)vendors/jquery-ui-1.11.4.custom/themes/smoothness/jquery-ui.min.css?@version" />
    @RenderSection("styles", required: false)
</head>
<body class="full-strech-background @animation">
    @RenderBody()
    <script src="@(cdnUrl)js/jquery-1.11.0.min.js?@version"></script>
    <script src="@(cdnUrl)js/jquery-migrate-1.2.1.min.js?@version"></script>
    <script src="@(cdnUrl)vendors/jquery-ui-1.11.4.custom/jquery-ui.js?@version"></script>
    <script src="@(cdnUrl)vendors/bootstrap/js/bootstrap.min.js?@version"></script>
    <script src="@(cdnUrl)vendors/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js?@version"></script>
    <script src="@(cdnUrl)js/html5shiv.js?@version"></script>
    <script src="@(cdnUrl)js/respond.min.js?@version"></script>
