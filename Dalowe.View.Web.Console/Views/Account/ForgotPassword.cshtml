@model Dalowe.View.Web.Framework.Models.Account.ForgotPasswordModel
@{
    ViewBag.Title = "Şifre Hatırlatma";
    Layout = "~/Views/Shared/_AnonymousLayout.cshtml";
}
<div id="signin-page-content">
    @using (Html.BeginForm("ForgotPassword", "Account", null, FormMethod.Post, new { @class = "form", @id = "forgot-password-form" }))
    {
        @Html.AntiForgeryToken()
        <h1 class="block-heading">Şifre Hatırlatma</h1>
        <p>Lütfen kullanıcı adı yada e-posta adresinizi giriniz!</p>
        <div class="form-group">
            <div class="input-icon">
                <i class="fa fa-user"></i>
                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control validate", placeholder = "Kullanıcı adı / E-posta" })
            </div>
        </div>
        <div class="form-group">
            <a href="@Url.Action("Login","Account")" class="btn btn-default"><i class="fa fa-chevron-circle-left"></i>&nbsp;Giriş Yap</a>
            <button type="submit" class="btn btn-green">
                Şifremi Gönder
                &nbsp;<i class="fa fa-chevron-circle-right"></i></button>
        </div>
        <hr />
    }
</div>
